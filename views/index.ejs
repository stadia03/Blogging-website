<!DOCTYPE html>
<html lang="en">

<head>
  <title>Gyaan Khota</title>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<link rel="stylesheet" href='../css/index.css'>

<body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>


  <%- include('./partials/_nav_bar.ejs') %>


    <div name="cards" class="p-2">


      <% blog.forEach(blog=>{ %>
        <div class="card text-center my-3 shadow p-3 mb-5 bg-body rounded" id="card"
          style="margin: 0% 10% 0% 10%; border: 2px solid rgb(183, 183, 183);">
          <div class="card-header" style="font-weight: 650; font-size: larger;">
            <%=blog.title%>
          </div>
          <div class="card-body">
            <h5 class="card-title" style="font-weight: 500; font-size:medium">
              <%=blog.description%>
            </h5>
            <p class="card-text">
              <%=blog.content%>
            </p>
            <div class="d-flex justify-content-center ">
              <a href="/blogs/<%=blog.slug%>" class="btn btn-primary m-2">Read Blog</a>
              <a href="/edit/<%=blog.id%>" class="btn btn-secondary m-2">Edit </a>
              <form action="/<%=blog.id%>?_method=DELETE"  class="m-2" method="POST">
                <button type="submit" class="btn btn-danger">Delete </button>
  
              </form>
            </div>
          


          </div>
          <div class="card-footer text-muted">
            <div>
              <%=blog.created.toLocaleDateString()%>
            </div>
          </div>
        </div>



        <% }) %>







    </div>


</body>

</html>